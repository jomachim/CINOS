{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "HaxeActiveConf",
            "type": "haxe",
            "args": "active configuration",
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": "build"
        },
        {
            "type": "hxml",
            "file": "build.opengl.hxml",
            "problemMatcher": [
                "$haxe-fake"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "hxml: build.opengl.hxml"
        }
    ]
}
